
include includes/header.pug

.product-present 
    - 
        var item = article;
        var items = articles
        //- console.log(article)
    .img-viewer 
        h2.item-title-lg(style="margin-left: 20px;")= item.title
        .img-box
            .images-box   
                each img, i in item.imgs 
                    img.mySlides(src="../public/images/" + img.path, alt="thumb" + i)
            a.prev(onclick="plusSlides(-1)") &#10094;
            a.next(onclick="plusSlides(1)") &#10095;
            .dress-action.img-react
                svg.icon__icon(xmlns="http://www.w3.org/2000/svg", viewBox="-2 -4 24 24", preserveAspectRatio="xMinYMin")
                    path( d="M3.636 7.208L10 13.572l6.364-6.364a3 3 0 1 0-4.243-4.243L10 5.086l-2.121-2.12a3 3 0 0 0-4.243 4.242zM9.293 1.55l.707.707.707-.707a5 5 0 1 1 7.071 7.071l-7.07 7.071a1 1 0 0 1-1.415 0l-7.071-7.07a5 5 0 1 1 7.07-7.071z") 
                svg.icon__icon(xmlns="http://www.w3.org/2000/svg", viewBox="-2 -4 24 24", preserveAspectRatio="xMinYMin")
                    path( d="M16 6a2 2 0 1 0 0-4 2 2 0 0 0 0 4zM7.928 9.24a4.02 4.02 0 0 1-.026 1.644l5.04 2.537a4 4 0 1 1-.867 1.803l-5.09-2.562a4 4 0 1 1 .083-5.228l5.036-2.522a4 4 0 1 1 .929 1.772L7.928 9.24zM4 12a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm12 6a2 2 0 1 0 0-4 2 2 0 0 0 0 4z") 
            .rate-info 
                div 
                    p.item-ratings= item.ratings
                div 
                    //- i.fas.fa-eye 
                    - var views = item.viewsCount.toString(); 
                    //-     - var likes = items[0].likesCount.toString(); 
                    //-     span= views
                    svg.icon__icon(xmlns="http://www.w3.org/2000/svg", viewBox="-2 -4 24 24", width="24", height="24", preserveAspectRatio="xMinYMin")
                        path(fill="red", d="M3.636 7.208L10 13.572l6.364-6.364a3 3 0 1 0-4.243-4.243L10 5.086l-2.121-2.12a3 3 0 0 0-4.243 4.242zM9.293 1.55l.707.707.707-.707a5 5 0 1 1 7.071 7.071l-7.07 7.071a1 1 0 0 1-1.415 0l-7.071-7.07a5 5 0 1 1 7.07-7.071z")
                    span= views
            h4.item-price= "$ " + item.price
        .item-thumb 
            each img, i in item.imgs 
                img.demo(src="../public/images/" + img.path, alt="thumb" + i, onclick='currentSlide(' + (i+1) +')')
        .item-details 
            .item-action 
                button Add to Cart
                button Buy Now 
            p.item-description 
                b Description: 
                |  Lorem ipsum dolor sit amet consectetur adipisicing elit. Amet temporibus aliquid nisi enim iure vitae quaerat laboriosam, modi sint voluptatum architecto praesentium quibusdam dicta labore laborum, quasi, reiciendis optio quisquam!

